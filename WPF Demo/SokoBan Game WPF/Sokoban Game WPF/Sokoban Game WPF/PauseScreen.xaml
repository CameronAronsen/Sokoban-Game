<Window x:Class="Sokoban_Game_WPF.PauseScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sokoban_Game_WPF"
        mc:Ignorable="d"
        Title="PauseScreen" Height="450" Width="469">
    <Grid>
        <Button Content="Save" HorizontalAlignment="Left" Margin="111,173,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="18" RenderTransformOrigin="-0.184,0.283" Click="Button_Click"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="317,173,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.045,0.744" FontFamily="Tahoma" FontSize="18" Click="Button_Click_1"/>
        <Button Content="Resume" HorizontalAlignment="Center" Margin="0,262,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="18" Click="Button_Click_2"/>
        <Button Content="Quit" HorizontalAlignment="Center" Margin="0,309,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="18" Width="67" Click="Button_Click_3"/>
        <Label Content="Paused" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontFamily="Unispace" FontSize="24"/>

    </Grid>
</Window>
