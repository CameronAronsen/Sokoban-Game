        <Label Content="Esc - Pause" HorizontalAlignment="Left" Margin="541,10,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="24" RenderTransformOrigin="0.5,0"/>
        <Label Content="Backspace - Undo" HorizontalAlignment="Left" Margin="507,54,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="24" RenderTransformOrigin="0.5,0" Cursor=""/>
        <Label Content="Space - Reset" HorizontalAlignment="Left" Margin="307,54,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="24" RenderTransformOrigin="0.5,0"/>

    </Grid>
</Window>
