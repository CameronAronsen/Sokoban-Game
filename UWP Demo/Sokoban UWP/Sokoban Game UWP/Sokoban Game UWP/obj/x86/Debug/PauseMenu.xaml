<Page
    x:Class="Sokoban_Game_UWP.PauseMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sokoban_Game_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="800" Height="951" Foreground="Black" FontFamily="Unispace" FontSize="48">

    <Grid Background="{ThemeResource SystemControlBackgroundBaseHighBrush}" FocusVisualPrimaryBrush="White">
        <TextBlock HorizontalAlignment="Center" Margin="0,57,0,0" Text="Paused" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Unispace" FontSize="64"/>
        <Button x:ConnectionId='2' Content="Save" Margin="184,339,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="36" Foreground="Black" Background="#33000000" BorderBrush="Black"                     />
        <Button x:ConnectionId='3' Content="Load" Margin="515,339,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="36" Foreground="Black" Background="#33000000" BorderBrush="Black"                       />
        <Button x:ConnectionId='4' Content="Resume" Margin="0,521,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="36" Foreground="Black" Background="#33000000" BorderBrush="Black" HorizontalAlignment="Center"                       />
        <Button x:ConnectionId='5' Content="Quit" Margin="0,659,0,0" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="36" Foreground="Black" Background="#33000000" BorderBrush="Black" HorizontalAlignment="Center" Width="148"                       />

    </Grid>
</Page>

